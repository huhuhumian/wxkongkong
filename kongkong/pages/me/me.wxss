.container {
    background-color: lightgray; 
    padding: 0px;
    display: flex;
    flex-direction: column;
}
.headerview {
    margin: 0px;
    top: 0px;
    left: 0px;
    width: 375px;
    height: 120px;
    display: flex;
    flex-direction: row;
    align-items: center;
    border: 0.5px solid gray;
    background-color: white;
}
.avatar {
    margin-left: 20px;
    margin-right: 20px;
    width: 80px;
    height: 80px;
    border-radius: 40px;
}
.infoview {
    width: 230px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.arrow {
    width: 25px;
    height: 20px;
}
.name {
    font-size: 18px;
}
.joinin {
    font: 20px;
}
.description {
    font: 18px;
}
